	<body>
		{ Astro.url.pathname !== '/' && (
			<nav class="w-full h-12 bg-gradient-to-r from-gray-200 to-[#D9D3D2] flex items-center justify-center space-x-4 text-gray-800">
				{ (Astro.url.pathname.replace(/\/$/, '') === '/about' || Astro.url.pathname.replace(/\/$/, '') === '/portfolio' || Astro.url.pathname.replace(/\/$/, '') === '/contact') ? (
					<a href="/" class="hover:underline">Return</a>
				) : Astro.url.pathname.replace(/\/$/, '') === '/project1' ? (
					<a href="/portfolio" class="hover:underline">Return</a>
				) : (
					<>
						<a href="/about" class="hover:underline">About Me</a>
						<a href="/portfolio" class="hover:underline">Portfolio</a>
						<a href="/contact" class="hover:underline">Contact</a>
					</>
				) }
			</nav>
		) }
		<slot />
	</body>
</html>

